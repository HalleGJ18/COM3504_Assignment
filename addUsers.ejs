<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="manifest" href="/manifest.json">


</head>
<body>
<% include ../public/partials/header.ejs %>

<h1 class="text-center p-2">Add Users</h1>





<form id="addUsers">
    <label for="name">Name</label>
    <input type = "name" name="name" value="name" required>


    <button type="submit">Add User</button>
</form>


<script>

    let userform = document.getElementById('addUsers');
    let uname = document.getElementById('name');


    userform.addEventListener('submit', event);


    var db;
    const request = indexedDB.open('UserInformation',2);
    request.onerror = (event) => {
        console.error("Connection Error");
    };
    request.onsuccess = (event) => {
        db = event.target.result;
    };
    request.onupgradeneeded = (event) => {
        db = event.target.result;
    };
    //creating object
    const objectStore = db.createObjectStore("users", { keyPath: "id", autoIncrement: true});
    objectStore.createIndex("name","name", { unique:true});

    objectStore.transaction.oncomplete = (event) => {
        const t = db.transaction(["users"],'readwrite').objectStore("users");

        let userinfo = {
            name: uname.value,
        };

        t.add(userinfo);

    };





</script>




