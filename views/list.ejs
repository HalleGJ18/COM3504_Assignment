<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="manifest" href="/manifest.json">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

</head>
<body>
<% include ../public/partials/header.ejs %>
<h1 class="text-center p-2"><%= title %></h1>

<table class="table table-bordered">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Photo</th>
        <th scope="col">Bird Name</th>
        <th scope="col">Date</th>
        <th scope="col">Location</th>
        <th scope="col">Description</th>
        <th scope="col">Added by</th>
        <th scope="col">Detailed view</th>
    </tr>
    </thead>
    <tbody>

    <% for(var i=0; i<data.length; i++) {%>
        <tr>
            <th scope="row"><%= i + 1 %></th>
            <td class="col-md-2 px-0">
                <div class="container" >
                    <img src="<%= data[i].img %>" class="img-fluid img-thumbnail">
                </div>
            </td>
            <td><%= data[i].bird_name %></td>
            <td><%= data[i].date %></td>
            <td><%= data[i].location %></td>
            <td><%= data[i].description %></td>
            <td>user</td>
            <td><a href="<%= data[i].detailedLink %>">Detailed view</a></td>
        </tr>
    <% } %>



    </tbody>
</table>



<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


</body>
</script>
</html>